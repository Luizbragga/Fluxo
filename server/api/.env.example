# --- Core ---
PORT=4000
NODE_ENV=development

# Local dev (fora do Docker): localhost
# Dentro do Docker Compose, o compose sobrescreve DATABASE_URL/REDIS_URL apontando pros containers.
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/barber?schema=public
REDIS_URL=redis://localhost:6379

# --- Auth ---
JWT_SECRET=changeme
JWT_REFRESH_SECRET=changeme

# Convites (se não definir, cai no JWT_SECRET)
INVITE_TOKEN_SECRET=changeme

# URL do front (usado em links de convite e afins)
WEB_BASE_URL=http://localhost:3000

# Se true, permite listar locations mesmo se active=false (útil em dev)
IGNORE_LOCATION_ACTIVE=false

# --- Email (opcional em dev; se vazio, pode falhar envio real) ---
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
MAIL_FROM=no-reply@fluxo.local

# --- Stripe (necessário para booking online) ---
# Ex: sk_test_...
STRIPE_SECRET_KEY=
# Webhook signing secret: whsec_...
STRIPE_WEBHOOK_SECRET=
# Base pública do front para return_url/callbacks do checkout
# Ex: http://localhost:3000
STRIPE_PUBLIC_BASE_URL=http://localhost:3000

# --- SMS Provider (mock/twilio) ---
SMS_PROVIDER=mock

# --- Twilio (somente se SMS_PROVIDER=twilio) ---
TWILIO_ACCOUNT_SID=
TWILIO_MESSAGING_SERVICE_SID=
# Use um dos dois métodos:
TWILIO_API_KEY_SID=
TWILIO_API_KEY_SECRET=
# ou auth token clássico:
TWILIO_AUTH_TOKEN=
